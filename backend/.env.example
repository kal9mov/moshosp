# Настройки сервера
SERVER_PORT=8080
SERVER_READ_TIMEOUT_SECONDS=30
SERVER_WRITE_TIMEOUT_SECONDS=30
SERVER_IDLE_TIMEOUT_SECONDS=60

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=moshosp
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=30

# Настройки аутентификации
JWT_SECRET=super-secret-key-change-me-in-production
JWT_EXPIRY_HOURS=24

# Настройки Telegram авторизации
# Получите Bot Token у @BotFather в Telegram
# и используйте bot token для TelegramSecret (для проверки подписи данных от Telegram Login Widget)
TELEGRAM_SECRET=bot-token-from-botfather

# Prometheus
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Mode
APP_ENV=development # production, development, test 